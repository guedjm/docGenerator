doctype html
html
    head
        title !{me.info.title}
        link(rel="stylesheet" type="text/css" href="../css/bootstrap.css")
        link(rel="stylesheet" type="text/css" href="../css/bootstrap-theme.css")
        link(rel="stylesheet" type="text/css" href="../css/uber-font.css")
        link(rel="stylesheet" type="text/css" href="../css/style.css")

        script(src="../js/jquery-1.12.0.min.js")
        script(src="../js/bootstrap.min.js")

    body
        header(class="header")
            div(class="container")
                div
                    h4 !{me.info.name}
                        span(class="version") v !{me.info.version}

        div(class="container")
            div(class="page_content")
                div(class="row")

                    //Right navigation
                    div(class="col-sm-3 border-right section-left")
                        div(class="sidebar-nav")
                            div(class="bloc")
                                a(href="#general")
                                    h4 GENERAL
                                ul
                                    each val in me.paragraphs
                                        span !{val.renderMenu()}

                            div(class="bloc")
                                a(href="#api")
                                    h4 API Reference
                                ul
                                    each val in me.paths
                                        span !{val.renderMenu()}

                            div(class="bloc")
                                a(href="#obj")
                                    h4 Objects
                                ul
                                    each val in me.objects
                                        span !{val.renderMenu()}

                            div(class="bloc")
                                a(href="#errors")
                                    h4 Errors





                    //Content
                    div(class="col-sm-9 border-left section-right")

                        div(class="doc-content")

                            div(class="part")
                                h1(id="general") General
                                hr

                                each val in me.paragraphs
                                    div(class="paragraph-header") !{val.render(me)}

                            div(class="part")
                                h1(id="api") API Reference
                                hr

                                each val in me.paths
                                    div !{val.render(me)}

                            div(class="part")

                                h1(id="obj") Objects
                                hr

                                each val in me.objects
                                    div !{val.render(me)}

                            div(class="part")

                                h1(id="errors") Possible Error response
                                hr

                                table(class="table table-striped")
                                    thead
                                        tr
                                            th HTTP status
                                            th Code
                                            th SubCode
                                            th Message
                                            th Comment
                                    tbody
                                        each val in me.errors
                                            div !{val.render(me)}